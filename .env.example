# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reddit_monitor

# Reddit API Credentials
# Create at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# HuggingFace API Token (for sentiment analysis)
# Get at: https://huggingface.co/settings/tokens
HF_API_TOKEN=your_huggingface_token_here

# Optional: Redis for worker coordination
REDIS_URL=redis://localhost:6379/0

# Flask Configuration
FLASK_ENV=production
PORT=5000

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO